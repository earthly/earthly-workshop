VERSION 0.7
FROM alpine:3.17.2
WORKDIR /quotes

deps:
  RUN apk add --no-cache jq curl

artifact:
  FROM +deps 
  RUN curl -s https://api.quotable.io/random | jq -r '.content' >> quotes.txt
  RUN sleep 3
  RUN curl -s https://api.quotable.io/random | jq -r '.content' >> quotes.txt
  RUN sleep 3
  RUN curl -s https://api.quotable.io/random | jq -r '.content' >> quotes.txt
  RUN sleep 3
  RUN curl -s https://api.quotable.io/random | jq -r '.content' >> quotes.txt
  RUN sleep 3
  RUN curl -s https://api.quotable.io/random | jq -r '.content' >> quotes.txt

  # COPY in.txt ./quotes.txt
  RUN echo Generated quotes:
  RUN cat quotes.txt
  SAVE ARTIFACT quotes.txt
